<!doctype html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Dashboard - MedTrackEmergency</title>
    <link rel="stylesheet" href="/public/styles.css?v=<%= Date.now() %>" />
</head>
<body>
    <div class="nav">
        <div class="nav-inner">
            <div class="brand">
                <div class="logo">
                    <img src="/public/logo.jpeg" alt="Logo" style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px;" />
                </div>
                <div>
                    <div style="font-size: 18px; font-weight: 700;">MedTrackEmergency</div>
                    <div class="sub">Inventory & Alert System</div>
                </div>
            </div>
            <div class="nav-links">
                <% if (user) { %>
                    <a class="pill" href="/dashboard">üìä Dashboard</a>
                    <a class="pill" href="/items">üìã Items</a>
                    <form method="post" action="/logout" style="margin:0">
                        <button class="btn ghost" type="submit">üö™ Logout</button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>

    <div class="container">
    <div style="margin-bottom: 24px;">
        <h1 style="font-size: 32px; font-weight: 800; margin: 0 0 8px 0; letter-spacing: -.5px;">Dashboard</h1>
        <p style="color: var(--muted); margin: 0; font-size: 16px;">Monitoring stok dan alert sistem inventory</p>
    </div>

    <!-- Alerts -->
    <div class="card col-12" style="margin-bottom: 24px;">
        <h3>üö® Alert & Notifikasi</h3>
        <div class="sub" style="margin-bottom: 16px;">Monitoring item yang memerlukan perhatian</div>
    
        <div class="grid" style="grid-template-columns:1fr 1fr; gap:16px">
            <div class="alert <%= (lowStock || []).length ? " danger" : "ok" %>">
                <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 8px;">
                    <span style="font-size: 20px;">
                        <%= (lowStock || []).length> 0 ? '‚ö†Ô∏è' : '‚úÖ' %>
                    </span>
                    <b style="font-size: 16px;">Stok Menipis</b>
                </div>
                <div class="sub">
                    <% if ((lowStock || []).length===0) { %>
                        Semua item memiliki stok di atas minimum.
                        <% } else { %>
                            <div style="font-size: 14px; line-height: 1.8;">
                                <% (lowStock || []).slice(0,6).forEach(it=> { %>
                                    <div style="padding: 4px 0; border-bottom: 1px solid rgba(255,255,255,.05);">
                                        <span style="font-weight: 600;">
                                            <%= it.name %>
                                        </span>
                                        <span style="color: var(--muted);">‚Äî</span>
                                        <span style="color: #ff9090; font-weight: 600;">
                                            <%= it.stock %>
                                                <%= it.unit %>
                                        </span>
                                        <span style="color: var(--muted); font-size: 13px;">(min: <%= it.minStock %>)</span>
                                    </div>
                                    <% }) %>
                            </div>
                            <% if ((lowStock || []).length> 6) { %>
                                <div class="sub" style="margin-top:12px; font-weight: 500;">
                                    + <%= (lowStock || []).length - 6 %> item lainnya yang perlu diperhatikan
                                </div>
                                <% } %>
                                    <% } %>
                </div>
            </div>
    
            <div class="alert <%= (expiring || []).length ? " danger" : "ok" %>">
                <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 8px;">
                    <span style="font-size: 20px;">
                        <%= (expiring || []).length> 0 ? '‚è∞' : '‚úÖ' %>
                    </span>
                    <b style="font-size: 16px;">Expired / Kadaluarsa ‚â§ <%= expSoonDays %> Hari</b>
                </div>
                <div class="sub">
                    <% if ((expiring || []).length===0) { %>
                        Tidak ada item yang sudah atau mendekati tanggal expired.
                        <% } else { %>
                            <div style="font-size: 14px; line-height: 1.8;">
                                <% 
                                const now = new Date();
                                (expiring || []).slice(0,6).forEach(it=> { 
                                    const expDate = it.expiredAt ? new Date(it.expiredAt) : null;
                                    const isExpired = expDate && expDate < now;
                                    const color = isExpired ? '#ff5757' : '#ffc966';
                                %>
                                    <div style="padding: 4px 0; border-bottom: 1px solid rgba(255,255,255,.05);">
                                        <span style="font-weight: 600;">
                                            <%= it.name %>
                                        </span>
                                        <span style="color: var(--muted);">‚Äî</span>
                                        <span style="color: <%= color %>; font-weight: 600;">
                                            <%= it.expiredAt ? it.expiredAt.toISOString().slice(0,10) : "-" %>
                                        </span>
                                        <% if (isExpired) { %>
                                            <span style="color: #ff5757; font-size: 12px; font-weight: 600;">‚ö† EXPIRED</span>
                                        <% } %>
                                    </div>
                                    <% }) %>
                            </div>
                            <% if ((expiring || []).length> 6) { %>
                                <div class="sub" style="margin-top:12px; font-weight: 500;">
                                    + <%= (expiring || []).length - 6 %> item lainnya
                                </div>
                                <% } %>
                                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="grid cards">
        <!-- KPI Cards -->
        <div class="card col-4">
            <div class="kpi">
                <div>
                    <div class="lbl">üì¶ Total Items</div>
                    <div class="num">
                        <%= (countsByCategory || []).reduce((a,c)=> a + ((c && c._count && c._count._all) ?
                            c._count._all : 0), 0) %>
                    </div>
                </div>
                <span class="badge ok">‚úì Aktif</span>
            </div>
        </div>

        <div class="card col-4">
            <div class="kpi">
                <div>
                    <div class="lbl">‚ö†Ô∏è Stok Menipis</div>
                    <div class="num" style="<%= (lowStock || []).length > 0 ? 'color: #ff9090;' : '' %>">
                        <%= (lowStock || []).length %>
                    </div>
                </div>
                <% if ((lowStock || []).length> 0) { %>
                    <span class="badge danger">! Perlu aksi</span>
                    <% } else { %>
                        <span class="badge ok">‚úì Aman</span>
                        <% } %>
            </div>
        </div>

        <div class="card col-4">
            <div class="kpi">
                <div>
                    <div class="lbl">‚è∞ Expired / Kadaluarsa</div>
                    <div class="num" style="<%= (expiring || []).length > 0 ? 'color: #ff9090;' : '' %>">
                        <%= (expiring || []).length %>
                    </div>
                </div>
                <% if ((expiring || []).length> 0) { %>
                    <span class="badge danger">‚ö† Perhatian</span>
                    <% } else { %>
                        <span class="badge ok">‚úì Aman</span>
                        <% } %>
            </div>
        </div>

        <!-- Ringkasan kategori -->
        <div class="card col-6">
            <h3>üìä Ringkasan Kategori</h3>
            <div class="sub">Distribusi item berdasarkan kategori</div>
            <div style="height:16px"></div>

            <div style="display:flex; gap:10px; flex-wrap:wrap;">
                <% 
                const catEmoji = {Drug: 'üíä', Circulation: '‚ù§Ô∏è', Airway: 'ü´Å', Breathing: 'üí®', Fluid: 'üíß'};
                (countsByCategory || []).forEach(c=> { 
                %>
                    <span class="badge" style="font-size: 16px; font-weight: 700; padding: 10px 16px;">
                        <%= catEmoji[c.category] || 'üì¶' %> <%= c.category %>: <b style="color: var(--accent);">
                                <%= c._count._all %>
                            </b>
                    </span>
                    <% }) %>
                        <% if (!countsByCategory || countsByCategory.length===0) { %>
                            <span class="badge">Belum ada data</span>
                            <% } %>
            </div>
        </div>

        <!-- Kategori -->
        <div class="card col-6">
            <h3>Kategori</h3>
            <div class="sub">Kelola inventory dan filter kategori</div>
            <div style="height:16px"></div>

            <div style="display:flex; gap:12px; flex-wrap:wrap;">
                <a class="btn primary" href="/items" style="font-size: 17px; padding: 16px 28px;">üìã Kelola Items</a>
                <a class="btn" href="/items?category=Drug" style="font-size: 17px; font-weight: 600; padding: 16px 28px;">üíä Drug</a>
                <a class="btn" href="/items?category=Circulation" style="font-size: 17px; font-weight: 600; padding: 16px 28px;">‚ù§Ô∏è Circulation</a>
                <a class="btn" href="/items?category=Airway" style="font-size: 17px; font-weight: 600; padding: 16px 28px;">ü´Å Airway</a>
                <a class="btn" href="/items?category=Breathing" style="font-size: 17px; font-weight: 600; padding: 16px 28px;">üí® Breathing</a>
                <a class="btn" href="/items?category=Fluid" style="font-size: 17px; font-weight: 600; padding: 16px 28px;">üíß Fluid</a>
            </div>
        </div>
    </div>
    </div>
</body>
</html>